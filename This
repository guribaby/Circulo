package Cuadrado;

public class Cir {
	
	public double radio;
	
	 public Cir(){
		this (176232);
	}
	 public Cir (double radio){
		 this.radio = radio;
	 }
	 
	public double pi; {
			pi= 3.14;
	} 
	
	public double calcularCircunferencia () {
		return 2*pi*radio;
	}
	public double calcularArea () {
		return pi*Math.pow(radio,2);
	}
	
	
	public void cambiarRadio(int r) {
		radio= r; 
	} 
	
	public void cambiarPi(int p) {
		pi= p;
	}
	
}
